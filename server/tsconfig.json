{
	"extends": "../tsconfig.json",
	"compilerOptions": {
		// Environment settings
		"lib": ["ESNext"],
		"target": "ESNext",
		"module": "ESNext",
		"jsx": "react-jsx",
		"jsxImportSource": "hono/jsx",

		// Types
		"types": ["bun-types"],

		// Output settings
		"declaration": true,
		"declarationMap": true,
		"composite": true,
		"outDir": "dist",
		"noEmit": false,
		"emitDecoratorMetadata": true,

		// Module resolution
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": false,

		// Path resolution
		"paths": {
			"@/*": ["./src/*"],
			"@shared/*": ["../shared/src/*"],
			"@client/*": ["../client/src/*"]
		}
	},
	"include": [
		"src/**/*",
		"../shared/src/validators/comments.validation.ts",
		"../shared/src/validators/posts.validation.ts"
	],
	"exclude": ["node_modules", "dist"],
	"references": [{ "path": "../shared" }]
}
