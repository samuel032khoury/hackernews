{
	"name": "hackernews",
	"version": "0.1.0",
	"description": "A bulletin board built with Bun, Hono, and React.",
	"author": "Samuel Ji",
	"license": "MIT",
	"packageManager": "bun@1.3.0",
	"workspaces": [
		"./server",
		"./client",
		"./shared"
	],
	"scripts": {
		"dev": "turbo dev",
		"dev:client": "turbo dev --filter=client",
		"dev:server": "turbo dev --filter=server",
		"build": "turbo build",
		"build:client": "turbo build --filter=client",
		"build:server": "turbo build --filter=server",
		"lint": "biome check --write",
		"format": "biome format --write",
		"type-check": "turbo type-check",
		"test": "turbo test"
	},
	"dependencies": {
		"hono": "^4.7.11",
		"better-auth": "^1.3.18"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.5",
		"@types/bun": "latest",
		"turbo": "^2.5.8",
		"typescript": "^5.9.3"
	}
}
