{
	"extends": "../tsconfig.json",
	"compilerOptions": {
		// Environment setup
		"lib": ["ESNext"],
		"target": "ESNext",
		"module": "ESNext",

		// Output configuration
		"declaration": true,
		"outDir": "./dist",

		// Type checking
		"strict": true,
		"skipLibCheck": true,

		// Additional checks
		"noFallthroughCasesInSwitch": true,
		"noUncheckedIndexedAccess": true,

		// Path resolution
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/*.test.ts", "dist"]
}
